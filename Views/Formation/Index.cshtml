model List<School.Models.Formation>
    <table cellpadding="0" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Formation Name</th>
                <th>Time</th>
                <th>isAvaible</th>
                <th>CourseID</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var Formation in Model)
            {
                <tr>
                    <td valign="middle" data-header-title="Date"><span>@Formation.FormationID</span></td>
                    <td valign="middle" data-header-title="Price">@Formation.FormationName</td>
                    <td valign="middle" data-header-title="Supplement">@Formation.time</td>
                    <td valign="middle" data-header-title="Supplement">@Formation.isAvaible</td>
                    <td valign="middle" data-header-title="Supplement">@Formation.CourseID</td>
                    <td><a href="/Formation/DeleteFormation/@Formation.FormationID">Delete</a></td>
                    <td><a href="/Formation/UpdateFormation/@Formation.FormationID">Update</a></td>

                </tr>
            }

        </tbody>
    </table>



